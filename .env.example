# Database Configuration
# Use DATABASE_URL for database connection
# Supported formats:
# SQLite: sqlite::memory: or sqlite:/path/to/database.db
# MySQL: mysql://username:password@host:port/database
# PostgreSQL: pgsql://username:password@host:port/database

DATABASE_URL=sqlite::memory:

# Alternative individual environment variables (optional, DATABASE_URL takes precedence)
# DB_DRIVER=sqlite
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=database_name
# DB_USERNAME=username
# DB_PASSWORD=password
# DB_CHARSET=utf8mb4

# Application Configuration
APP_NAME=Icebox Framework
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Other environment variables can be added here
