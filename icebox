function cli_insert_resource_route($plural) {
  $controller = ucfirst($plural);

  $route_file = ROOT_DIR . '/config/routes.php';
  // $f = file_get_contents($route_file);

  $route_text = '';

  $fp = fopen($route_file, "r+");
  $start_pos = ftell($fp);
  for($i=0; $i<5; $i++) { $route_text .= fgets($fp); }
  // fputs($fp, "my strings\n");

  $route_text .= "\n" . '$route->resource(\'' . $plural . '\', \'' . $controller . '\');' . "\n";
  $route_text .= stream_get_contents($fp);
  fseek($fp, $start_pos);

  // echo ftell($fp);

  // echo $route_text;

  fwrite($fp, $route_text);
  fclose($fp);
}

function cli_run_generate_crud($singular, $args) {
  $plural = Utils::pluralize($singular);

  $model_name = ucfirst($singular);
  $controller_name = ucfirst($plural) . 'Controller';

  // find attrs list from commad
  $attrs = array_slice($args, 4);

  cli_create_controller($controller_name, $model_name, $singular, $plural, $attrs);
  cli_create_model($model_name);

  // create view
  cli_create_view__form($singular, $plural, $attrs);
  cli_create_view_edit($singular, $plural);
  cli_create_view_index($singular, $plural);
  cli_create_view_new($singular, $plural);
  cli_create_view_show($singular, $plural);
  cli_insert_resource_route($plural);
}

/* Migration generator functions */
function cli_run_generate_migration($migration_name, $args) {
  echo "Migration generator started\n";
  
  // Get columns from command arguments
  $columns = array_slice($args, 4);

  // Create migration file
  $migrations_dir = ROOT_DIR . '/db/migrations';
  // $filePath = MigrationGenerator::createMigrationFile($migration_name, $up_sql, $down_sql, $migrations_dir);
  $filePath = MigrationGenerator::createMigrationFile($migration_name, $columns, $migrations_dir);
  
  // Get relative path for display
  $relativePath = str_replace(ROOT_DIR . '/', '', $filePath);
  echo "create  $relativePath\n";
  echo "Migration created successfully!\n";
}
/* ./Migration generator functions */

/* Migration runner functions */
function cli_run_db_migrate() {
  echo "Running database migrations...\n";
  
  try {
    $runner = new MigrationRunner();
    $migrated = $runner->migrate();
    
    if (empty($migrated)) {
      echo "No pending migrations.\n";
    } else {
      echo "Successfully ran " . count($migrated) . " migration(s):\n";
      foreach ($migrated as $file) {
        echo "  - " . basename($file) . "\n";
      }
    }
  } catch (\Exception $e) {
    echo "Error: " . $e->getMessage() . "\n";
    exit(1);
  }
}

function cli_run_db_status() {
  echo "Migration Status\n";
  echo "================\n\n";
  
  try {
    $runner = new MigrationRunner();
    $status = $runner->status();
    
    echo "Executed migrations: " . $status['total_executed'] . "\n";
    if (!empty($status['executed'])) {
      foreach ($status['executed'] as $migration) {
        echo "  [X] " . $migration['file'] . "\n";
      }
    }
    
    echo "\nPending migrations: " . $status['total_pending'] . "\n";
    if (!empty($status['pending'])) {
      foreach ($status['pending'] as $migration) {
        echo "  [ ] " . $migration['file'] . "\n";
      }
    } else {
      echo "  No pending migrations.\n";
    }
    
  } catch (\Exception $e) {
    echo "Error: " . $e->getMessage() . "\n";
    exit(1);
  }
}

function cli_run_db_rollback($args) {
  $steps = 1;
  
  // Parse steps parameter
  foreach ($args as $arg) {
    if (strpos($arg, 'steps=') === 0) {
      $steps = (int) substr($arg, 6);
      if ($steps < 1) {
        echo "Error: steps must be at least 1\n";
        exit(1);
      }
    }
  }
  
  echo "Rolling back $steps migration(s)...\n";
  
  try {
    $runner = new MigrationRunner();
    $rolledBack = $runner->rollback($steps);
    
    if (empty($rolledBack)) {
      echo "No migrations to rollback.\n";
    } else {
      echo "Successfully rolled back " . count($rolledBack) . " migration(s):\n";
      foreach ($rolledBack as $file) {
        echo "  - " . basename($file) . "\n";
      }
    }
  } catch (\Exception $e) {
    echo "Error: " . $e->getMessage() . "\n";
    exit(1);
  }
}

function cli_run_db_reset() {
  echo "Rolling back all migrations...\n";
  
  try {
    $runner = new MigrationRunner();
    $rolledBack = $runner->reset();
    
    if (empty($rolledBack)) {
      echo "No migrations to rollback.\n";
    } else {
      echo "Successfully rolled back all " . count($rolledBack) . " migration(s).\n";
    }
  } catch (\Exception $e) {
    echo "Error: " . $e->getMessage() . "\n";
    exit(1);
  }
}
/* ./Migration runner functions */

function cli_run_test($args) {
  // Remove the first two arguments: script name and 'test'
  $test_args = array_slice($args, 2);
  
  // Build PHPUnit command
  $phpunit = __DIR__ . '/vendor/bin/phpunit';
  if (!file_exists($phpunit)) {
    echo "Error: PHPUnit not found at $phpunit. Run 'composer install' first.\n";
    exit(1);
  }
  
  $command = escapeshellcmd($phpunit);
  
  // If no arguments provided, default to tests folder
  if (empty($test_args)) {
    $test_args[] = 'tests';
  }
  
  foreach ($test_args as $arg) {
    $command .= ' ' . escapeshellarg($arg);
  }
  
  echo "Running: $command\n";
  passthru($command, $return_var);
  exit($return_var);
}

function cli_run_console($args) {
  // Check if PsySH is available
  $psysh = 'vendor/bin/psysh';
  if (!file_exists($psysh)) {
    echo "Error: PsySH not found at $psysh. Run 'composer install' first.\n";
    exit(1);
  }
  
  // Show message and load PsySH directly
  // echo "Loading development environment (PHP " . PHP_VERSION . ")\n";
  echo "Type 'exit' to quit, 'help' for help.\n\n";
  
  // Run PsySH directly without bootstrap config
  // The application will handle autoloading via its own bootstrap
  passthru(escapeshellcmd($psysh), $return_var);
  
  exit($return_var);
}

function cli_run_server($args) {
  $host = 'localhost';
  $port = '8000';

  // Parse command line arguments
  foreach ($args as $key => $arg) {
    if (strpos($arg, '-p=') === 0 || strpos($arg, '--port=') === 0) {
      $port = substr($arg, strpos($arg, '=') + 1);
      unset($args[$key]);
    } elseif (strpos($arg, '-h=') === 0 || strpos($arg, '--host=') === 0) {
      $host = substr($arg, strpos($arg, '=') + 1);
      unset($args[$key]);
    }
  }

  // Re-index the array after unsetting elements
  $args = array_values($args);

  echo "Starting PHP built-in web server...\n";
  echo "Document root: public\n";
  echo "URL: http://$host:$port\n";
  echo "Press Ctrl+C to stop the server\n\n";

  $public_dir = ROOT_DIR . '/public';

  // Check if public directory exists
  if (!is_dir($public_dir)) {
    echo "Warning: 'public' directory not found in current working directory.\n";
    echo "The server may not work correctly.\n\n";
  }

  // Build the command
  $command = "php -S $host:$port -t " . $public_dir;

  // Pass through any additional arguments (e.g., for router script)
  if (count($args) > 2) {
    for ($i = 2; $i < count($args); $i++) {
      $command .= ' ' . escapeshellarg($args[$i]);
    }
  }

  echo $command . "\n";

  passthru($command, $return_var);
  exit($return_var);
}

if(count($argv) == 1) { // no arguments
  cli_show_main_help();

} else if($argv[1] == 'help' || $argv[1] == '-h' || $argv[1] == '--help') { // help arguments

  if(isset($argv[2])) {
    cli_show_specific_help($argv);
  } else {
    cli_show_main_help();
  }

} else { // other arguments

  if($argv[1] == 'g' || $argv[1] == 'generate') {

    if(isset($argv[2])) {
      if($argv[2] == 'crud') {
        echo "Crud generator started\n";
        $singular = $argv[3];
        cli_run_generate_crud($singular, $argv);
      } else if($argv[2] == 'migration') {
        if(!isset($argv[3])) {
          echo "Error: Migration name is required\n";
          echo "Usage: php icebox generate migration <migration_name> [columns]\n";
          exit(1);
        }
        $migration_name = $argv[3];
        cli_run_generate_migration($migration_name, $argv);
      }
    } else {
      echo "Option missing\n";
      echo "Try: php icebox -h <command-name>\n";
    }
  } else if($argv[1] == 'db:migrate') {
    cli_run_db_migrate();
  } else if($argv[1] == 'db:migrate:status') {
    cli_run_db_status();
  } else if($argv[1] == 'db:rollback') {
    cli_run_db_rollback($argv);
  } else if($argv[1] == 'db:reset') {
    cli_run_db_reset();
  } else if($argv[1] == 'test') {
    cli_run_test($argv);
  } else if($argv[1] == 'console' || $argv[1] == 'c') {
    cli_run_console($argv);
  } else if($argv[1] == 'server' || $argv[1] == 's') {
    cli_run_server($argv);
  } else {
    echo "Unknown command: {$argv[1]}\n";
    echo "Try: php icebox -h\n";
  }
}
